<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:hint="@string/hint_task_title"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/daily_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/task_title"
            android:layout_marginLeft="150dp"
            android:layout_marginStart="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="@string/daily"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/percent_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/daily_one"
            android:layout_alignBottom="@+id/daily_one"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/daily_one"
            android:layout_toRightOf="@+id/daily_one"
            android:hint="@string/hint_percentage"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/days_left_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/daily_one"
            android:layout_alignStart="@+id/daily_one"
            android:layout_below="@+id/daily_one"
            android:text="@string/days_left"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/count_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/days_left_one"
            android:layout_alignBottom="@+id/days_left_one"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/days_left_one"
            android:layout_toRightOf="@+id/days_left_one"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>
